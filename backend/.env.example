# Callify Backend Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Database
DATABASE_PATH=./data/callify.db

# OpenAI Configuration (for transcription and AI analysis)
OPENAI_API_KEY=your-openai-api-key

# Twilio Configuration (optional - for telephony webhooks)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Telnyx Configuration (optional - alternative to Twilio)
TELNYX_API_KEY=
TELNYX_PUBLIC_KEY=

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800

# Retention Policy
RETENTION_DAYS=60

# Alert Thresholds
LOW_SCORE_THRESHOLD=5.0
LONG_CALL_THRESHOLD_SECONDS=1800
